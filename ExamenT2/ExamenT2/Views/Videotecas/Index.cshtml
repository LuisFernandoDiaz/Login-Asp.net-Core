@model IEnumerable<ExamenT2.Models.Videoteca>

@{
    ViewData["Title"] = "Index";
    var numero = 1;

    string color = "";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-warning">Crear Nuevo</a>
</p>

<form asp-asp-controller="Videoteca" asp-action="Index">
    <p>
        <label>Nombre</label>
        <input type="text" name="buscarNom" />
        <label>Rating</label>
        <input type="number" name="buscarRat" step="0.01" />
        <input type="submit" value="Buscar" class="btn btn-info" />
    </p>
</form>


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                N°
            </th>
            <th>
                <a style="text-decoration: none;" asp-asp-controller="Videoteca" asp-action="Index" asp-route-ordenar="@ViewData["NombreSort"]">
                    Nombre
                </a>
            </th>
            <th>
                <a style="text-decoration: none;" asp-asp-controller="Videoteca" asp-action="Index" asp-route-ordenar="@ViewData["TipoSort"]">
                    Tipo
                </a>
                
            </th>
            <th>
                <a style="text-decoration: none;" asp-asp-controller="Videoteca" asp-action="Index" asp-route-ordenar="@ViewData["VecesSort"]">
                    veces_vistas
                </a>
            </th>
            <th>
                <a style="text-decoration: none;" asp-asp-controller="Videoteca" asp-action="Index" asp-route-ordenar="@ViewData["RatingSort"]">
                    Rating
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

            int intValue = Convert.ToInt32(item.rating);

            if (intValue < 4)
            {
                color = "red";
            }
            else
            {
                color = "";
            }

        <tr>
            <td>
                @numero
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.veces_vista)
            </td>
            <td style="background: @color">
                @Html.DisplayFor(modelItem => item.rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
            </tr>
            numero++;
        }
    </tbody>
</table>
