@model session03.ViewModels.UsuarioVM;
<!--arriba podemos insertar los campos requeridos que creamos en ViewModel-->
<!--la linea 4 - 6 con esto desactivas el layout(una barra que va encima de todas las paginas que creamos en .net)-->
@{
    Layout = null;
}

<html>
    <head>
        <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">
                        <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Nombre Completo" required asp-for="NombreCompleto"/>
                            <input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Correo" />
                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Clave"/>
                            <input class="form-control mb-3" type="password" placeholder="Confirmar Contraseña" required asp-for="ConfirmarClave"/>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Registrarse</button>
                            </div>
                        @if (ViewData["mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["mensaje"]
                            </div>
                        }
                        ¿Ya tienes cuenta? <a asp-controller="Acceso" asp-action="Login">Iniciar Senssion</a>

                    </form>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>

</html>
